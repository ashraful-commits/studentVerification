<div class="container student-table">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <a class="btn btn-secondary w-100" href="/">Back to Admin</a>
                </div>
                <div class="card-body">
                    <h2 class="text-center">Unverified Students </h2>
                    <table class="table table-stripe align-middle my-5 soro-data-table">
                        <thead>
                            <tr >
                                <th class=" text-center">#</th>
                                <th class=" text-center">Name</th>
                                <th class=" text-center">Email</th>
                                <th class=" text-center">cell</th>
                                <th class=" text-center">location</th>
                                <th class=" text-center">Photo</th>
                                <th class=" text-center">action</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% students.reverse().forEach((element,index) => { %>
                            <tr>
                                <td class=" text-center"><%= index+1 %> </td>
                                <td class=" text-center"><%= element.name %> </td>
                                <td class=" text-center"><%= element.email %> </td>
                                <td class=" text-center">
                                    <%= element.cell %> 
                                    <a class="btn btn-danger btn-sm" href="/unverified/<%= element.otp %>  ">Verify Now</a>
                                </td>
                                <td class=" text-center"><%= element.location %> </td>
                                <td class=" text-center">
                                    <% if (element.photo == 'avater.png') { %>
                                        <img src="/images/<%= element.photo %> " alt="">
                                        <% } else { %>
                                            <img src="/images/<%= element.photo %> " alt="">
                                    <% } %>
                                  
                                </td>
                                <td class="w-100 text-center">
                                    <a href="/show/<%= element.id %> " class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                    <a href="/edit/<%= element.id %> " class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="/delete/<%= element.id %> " class="btn btn-sm btn-danger delete-btn"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                           
                           <% }) %>
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>