<div class="container student-create">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header">
                    <a class="btn btn-primary w-100" href="/">Back</a>
                </div>
                <div class="card-body my-2">
                    <h2 class="text-center">Edit Data </h2>
                  <form action="/update/<%= students.id %> " method="POST" enctype="multipart/form-data">
                    <div class="my-1">
                        <label for="">Name</label>
                    <input class="form-control my-1" value="<%= students.name %> " type="text" name="name" id="">
                    </div>
                    <div class="my-1">
                        <label for="">Email</label>
                    <input class="form-control my-1" value="<%= students.email %> " type="email" name="email" id="">
                    </div>
                    <div class="my-1">
                        <label for="">Cell</label>
                         <input class="form-control my-1" value="<%= students.cell %>" type="text" name="cell" id="">
                    </div>
                    <div class="my-1">
                        <label for="">Photo</label>
                        <br>
                        <img class="preload-student" src="/images/<%= students.photo %>" alt="">
                        <br>
                        <label for="upload-student-photo"><img src="https://cdn2.vectorstock.com/i/1000x1000/85/76/camera-icon-in-flat-style-vector-20418576.jpg" alt=""></label>
                        <input class="my-1" type="file" name="student-photo" id="upload-student-photo" multiple >
                    </div>
                    <div class="my-1">
                        <label for="">Locatin</label>
                        <select class="form-control my-1" name="location" id="">
                            <option value="">....</option>
                            <option <% if (students.location == 'Mirpur') { %> selected<% } %> value="Mirpur">Mirpur</option>
                            <option <% if (students.location == 'Uttara') { %> selected<% } %> value="Uttara">Uttara</option>
                            <option <% if (students.location == 'Badda') { %> selected<% } %> value="Badda">Badda</option>
                        </select>
                    </div>
                    <button class="form-control btn btn-primary" type="submit">update</button>
                  </form>
                </div>
            </div>
        </div>
    </div>
</div>